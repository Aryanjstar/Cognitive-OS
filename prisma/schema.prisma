generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth.js Models ─────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  repositories       Repository[]
  issues             Issue[]
  pullRequests       PullRequest[]
  commits            Commit[]
  focusSessions      FocusSession[]
  contextSwitches    ContextSwitch[]
  cognitiveSnapshots CognitiveSnapshot[]
  aiBriefings        AIBriefing[]
  dailyAnalytics     DailyAnalytics[]
  agentRecommendations AgentRecommendation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── GitHub Data Models ─────────────────────────────────────

model Repository {
  id           String   @id @default(cuid())
  userId       String
  githubId     Int      @unique
  name         String
  fullName     String
  url          String
  description  String?  @db.Text
  language     String?
  isPrivate    Boolean  @default(false)
  starCount    Int      @default(0)
  lastSyncedAt DateTime @default(now())
  createdAt    DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  issues       Issue[]
  pullRequests PullRequest[]
  commits      Commit[]

  @@index([userId])
}

model Issue {
  id          String    @id @default(cuid())
  userId      String
  repoId      String
  githubId    Int
  number      Int
  title       String
  body        String?   @db.Text
  state       String    @default("open")
  labels      Json      @default("[]")
  complexity  Float     @default(1)
  priority    Float     @default(1)
  commentCount Int      @default(0)
  assignedAt  DateTime?
  closedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@unique([repoId, githubId])
  @@index([userId, state])
}

model PullRequest {
  id             String    @id @default(cuid())
  userId         String
  repoId         String
  githubId       Int
  number         Int
  title          String
  body           String?   @db.Text
  state          String    @default("open")
  additions      Int       @default(0)
  deletions      Int       @default(0)
  changedFiles   Int       @default(0)
  reviewComments Int       @default(0)
  complexity     Float     @default(1)
  mergedAt       DateTime?
  closedAt       DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@unique([repoId, githubId])
  @@index([userId, state])
}

model Commit {
  id           String   @id @default(cuid())
  userId       String
  repoId       String
  sha          String
  message      String   @db.Text
  additions    Int      @default(0)
  deletions    Int      @default(0)
  filesChanged Int      @default(0)
  committedAt  DateTime
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@unique([repoId, sha])
  @@index([userId])
}

// ─── Cognitive & Focus Models ───────────────────────────────

model FocusSession {
  id               String    @id @default(cuid())
  userId           String
  taskType         String    @default("general")
  taskId           String?
  startedAt        DateTime  @default(now())
  endedAt          DateTime?
  duration         Int       @default(0)
  interrupted      Boolean   @default(false)
  interruptionCount Int      @default(0)
  notes            String?   @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startedAt])
}

model ContextSwitch {
  id            String   @id @default(cuid())
  userId        String
  fromTaskId    String?
  fromTaskType  String?
  toTaskId      String?
  toTaskType    String?
  switchedAt    DateTime @default(now())
  estimatedCost Float    @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, switchedAt])
}

model CognitiveSnapshot {
  id        String   @id @default(cuid())
  userId    String
  score     Float
  level     String
  breakdown Json
  factors   Json
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
}

model AIBriefing {
  id          String   @id @default(cuid())
  userId      String
  taskId      String
  taskType    String
  title       String
  content     String   @db.Text
  sections    Json
  generatedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, taskId])
}

model DailyAnalytics {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime @db.Date
  totalFocusMinutes Int     @default(0)
  contextSwitches  Int      @default(0)
  avgCognitiveLoad Float    @default(0)
  deepWorkStreaks  Int      @default(0)
  peakFocusHour    Int      @default(0)
  tasksCompleted   Int      @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model AgentRecommendation {
  id                 String   @id @default(cuid())
  userId             String
  agent              String
  type               String
  message            String   @db.Text
  priority           String   @default("medium")
  estimatedCostMinutes Float? 
  suggestedActions   Json     @default("[]")
  dismissed          Boolean  @default(false)
  createdAt          DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
